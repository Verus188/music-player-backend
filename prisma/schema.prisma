generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Track {
  id Int @id @default(autoincrement())
  title String
  artist String
  fileUrl String?
  duration Int?
  albumImageUrl String?
  likedBy User[] @relation("UserFavoriteTracks")
  createdAt DateTime @default(now())
}

model User {
  id Int @id @default(autoincrement())
  name String
  email String @unique
  password String
  favoriteTracks Track[] @relation("UserFavoriteTracks")
  createdAt DateTime @default(now())
}

